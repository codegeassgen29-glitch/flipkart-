{
  "name": "flipkart-clone",
  "description": "A clone of Flipkart e-commerce platform built with React and PHP.",
  "require": {
    "php": "^7.4 || ^8.0",
    "slim/slim": "^4.0",
    "slim/psr7": "^1.0",
    "illuminate/database": "^8.0",
    "vlucas/phpdotenv": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8000 -t public"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}